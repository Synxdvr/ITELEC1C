@{
}

@model Instructor;

<h1> Delete Instructor</h1>
<table class="table table-dark table-striped">
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Last Name</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>First Name</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>@(Model.IsTenured ? "Permanent" : "Probitionary")</td>
    </tr>
    <tr>
        <th>Rank</th>
        <td>@Model.Rank</td>
    </tr>
    <tr>
        <th>Hiring Date</th>
        <td>@Model.HiringDate.ToString("d")</td>
    </tr>
</table>
<button data-bs-toggle="modal" data-bs-target="#remove" type="button" class="btn btn-danger">Remove</button>
<button onclick="history.back()" class="btn btn-secondary">Cancel</button>




<div class="modal fade" id="remove" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Warning!</h1>
            </div>
            <div class="modal-body text-light">
                Are you sure to delete this Instructor?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <form asp-action="Delete" method="post">
                    <button type="submit" class="btn btn-danger">Remove</button>
                </form>
            </div>
        </div>
    </div>
</div>