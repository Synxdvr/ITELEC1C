@model IEnumerable<Instructor>;

<div>Instructors</div>


<table class="table table-dark">

    <tr>
        <th colspan="7">Instructor</th>
    </tr>

    <tr>
        <td>Id</td>
        <td>Fist Name</td>
        <td>Last Name</td>
        <td>Status</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>Details</td>


    </tr>
    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.Id</td>
            <td>@instructor.FirstName</td>
            <td>@instructor.LastName</td>
            @{
                if (@instructor.IsTenured == true)
            {
                <td>Permanent</td>
            }
            else
            {
                <td>Provisionary</td>
            }
            }
            <td>@instructor.Rank</td>
            <td>@instructor.HiringDate</td>
            <td><a asp-action="ShowDetail" asp-route-id="@instructor.Id">Show Details</a></td>

        </tr>
    }
</table>