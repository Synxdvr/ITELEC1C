
@model IEnumerable<Student>;


<table  class="table table-striped table-dark">
            
        <tr>
            <th colspan="6">Student</th>
        </tr>

        <tr>
            <td>Name</td>
            <td>Course</td>
            <td>Admission Date</td>
            <td>Email</td>
            <td>GPA</td>
            <td>Details</td>
           
            
        </tr>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.FirstName @student.LastName</td>
            <td>@student.Course</td>
            <td>@student.AdmissionDate.ToString("d")</td>
            <td>@student.Email</td>
            <td>@student.GPA</td>
            <td><a asp-action="ShowDetail" asp-route-id="@student.Id">Show Details</a></td>
          
        </tr>
    }
</table>

<button class="Student" onclick="location.href='@Url.Action("Student", "Student")'">
    Student
</button>


<style>
    .Student {
        padding: 1.3em 3em;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 2.5px;
        font-weight: 500;
        color: #000;
        background-color: #fff;
        border: none;
        border-radius: 45px;
        box-shadow: 7px 7px 20px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease 0s;
        cursor: pointer;
        outline: none;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

        .Student:hover {
            background-color: #23c483;
            box-shadow: 0px 15px 20px rgba(46, 229, 157, 0.5);
            color: #fff;
            transform: translate(-60%, -60%);
        }

        .Student:active {
            transform: translate(-50%, -40%);
        }
</style>