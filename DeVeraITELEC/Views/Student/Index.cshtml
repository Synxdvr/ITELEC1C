
@model IEnumerable<Student>;


<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th class="text-center" colspan="6">Student</th>
        </tr>
        <tr>
            <th>Name</th>
            <th>Course</th>
            <th>Admission Date</th>
            <th>Email</th>
            <th>GPA</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@($"{student.FirstName} {student.LastName}")</td>
                <td>@student.Course</td>
                <td>@student.AdmissionDate.ToString("d")</td>
                <td>@student.Email</td>
                <td>@student.GPA</td>
                <td><a asp-action="ShowDetail" asp-route-id="@student.Id">Show Details</a></td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <button class="btn btn-outline-danger btn-lg" onclick="location.href='@Url.Action("Student", "Student")'">
        Student
    </button>
</div>