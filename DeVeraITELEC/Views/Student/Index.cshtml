
@model IEnumerable<Student>;


<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th class="text-center" colspan="6">Student</th>
        </tr>
        <tr>
            <th>Name</th>
            <th>Course</th>
            <th>Admission Date</th>
            <th>Email</th>
            <th>Details</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@($"{student.FirstName} {student.LastName}")</td>
                <td>@student.Course</td>
                <td>@student.AdmissionDate.ToString("d")</td>
                <td>@student.Email</td>
                <td><a asp-action="ShowDetail" asp-route-id="@student.Id">Show Details</a></td>
                <td><a asp-action="Edit" asp-route-id="@student.Id">Edit Details</a></td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-outline-danger btn-lg" asp-action="Student">Student</a>
</div>
<br />
<div class="text-center">
    <a class="btn btn-outline-danger btn-lg" asp-action="AddStudent">Add Student</a>
</div>